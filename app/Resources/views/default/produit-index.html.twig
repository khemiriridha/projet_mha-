{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row" style="margin-top: 100px;">
            <div class="col-md-3 col-md-pull-9">
                <ul>
                    {% for catt1 in cattt %}

                        <li>
                            <a href="{{ path('cat_prodindex',{'id_cat' :catt1.cat_id }) }}">{{ catt1.cat_nom }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="col-md-9 col-md-push-3">


                {% for produit in produit %}
                    <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women" style="">
                        <!-- Block2 -->
                        <div class="block2">
                            <div class="block2-pic hov-img0">
                                <img src="{{asset(images_directory ~'/'~ produit.file)}}" alt="IMG-PRODUCT">

                                <a href="#" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 js-show-modal1">
                                    Quick View
                                </a>
                            </div>

                            <div class="block2-txt flex-w flex-t p-t-14">
                                <div class="block2-txt-child1 flex-col-l ">
                                    <a href="product-detail.html" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                        {{produit.nom }}
                                    </a>

                                    <span class="stext-105 cl3">
									{{produit.prix }} DT
								</span>
                                </div>

                                <div class="block2-txt-child2 flex-r p-t-3">
                                    <a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                                        <img class="icon-heart1 dis-block trans-04" src="http://localhost:800/PFE5/web/tshop/images/icons/icon-heart-01.png" alt="ICON">
                                        <img class="icon-heart2 dis-block trans-04 ab-t-l" src="http://localhost:800/PFE5/web/tshop/images/icons/icon-heart-02.png" alt="ICON">
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                {% endfor%}




            </div>


        </div>
    </div>




{% endblock %}
